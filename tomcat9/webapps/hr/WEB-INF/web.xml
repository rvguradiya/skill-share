

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

<servlet>
 <servlet-name>GetEmployees</servlet-name>
 <servlet-class>com.thinking.machines.hr.GetEmployees</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>GetEmployees</servlet-name>
 <url-pattern>/getEmployees</url-pattern>
 </servlet-mapping>
 <servlet>
 <servlet-name>AddEmployee</servlet-name>
 <servlet-class>com.thinking.machines.hr.AddEmployee</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>AddEmployee</servlet-name>
 <url-pattern>/addEmployee</url-pattern>
 </servlet-mapping>
 <servlet>
 <servlet-name>DeleteEmployee</servlet-name>
 <servlet-class>com.thinking.machines.hr.DeleteEmployee</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>DeleteEmployee</servlet-name>
 <url-pattern>/deleteEmployee</url-pattern>
 </servlet-mapping>

 <servlet>
 <servlet-name>EditEmployee</servlet-name>
 <servlet-class>com.thinking.machines.hr.EditEmployee</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>EditEmployee</servlet-name>
 <url-pattern>/editEmployee</url-pattern>
 </servlet-mapping>

 <servlet>
 <servlet-name>UpdateEmployee</servlet-name>
 <servlet-class>com.thinking.machines.hr.UpdateEmployee</servlet-class>
 </servlet>
 <servlet-mapping>
 <servlet-name>UpdateEmployee</servlet-name>
 <url-pattern>/updateEmployee</url-pattern>
 </servlet-mapping>

	<servlet>
		<servlet-name>FileUploadServlet</servlet-name>
		<servlet-class>com.thinking.machines.hr.FileUploadServlet</servlet-class>
		<multipart-config />
	</servlet>

	<servlet-mapping>
		<servlet-name>FileUploadServlet</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>

</web-app>
